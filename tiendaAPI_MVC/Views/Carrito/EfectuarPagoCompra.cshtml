@Styles.Render("~/Content/css/custom/pago-compra.css")
<!-- Start Banner Area -->
<section class="banner-area organic-breadcrumb">
    <div class="container">
        <div class="breadcrumb-banner d-flex flex-wrap align-items-center">
            <div class="col-first">
                <h1>Efectuar Pago</h1>
                <nav class="d-flex align-items-center justify-content-start">
                    <a href="/">Inicio<i class="fa fa-caret-right" aria-hidden="true"></i></a>
                    <a href="/carrito">Carrito</a>
                    <a href="#">Efectuar Pago</a>
                </nav>
            </div>
        </div>
    </div>
</section>
<!-- End Banner Area -->
<!-- Start Cart Area -->
<div class="container">
    <div class="cart-title">
        <div class="row">
            <div class="col-md-6">
                <h6 class="ml-15">Producto</h6>
            </div>
            <div class="col-md-2">
                <h6>Precio</h6>
            </div>
            <div class="col-md-2">
                <h6>Cantidad</h6>
            </div>
            <div class="col-md-2">
                <h6>Total</h6>
            </div>
        </div>
    </div>
    <div class="cart-single-item">
        @{
            decimal totalProducto = 0;
            decimal totalVenta = 0;
            foreach (System.Collections.Generic.KeyValuePair<string, ItemCarrito> item in Model)
            {
                <div class="row align-items-center">
                    <div class="col-md-6 col-12">
                        <div class="product-item d-flex align-items-center">
                            <img src="/@item.Value.producto.Imagenes.Where( s => s.predeterminada).FirstOrDefault().Ubicacion" class="img-fluidi img-item-carrito" alt="">
                            <h6>@item.Value.producto.Nombre</h6>
                        </div>
                    </div>
                    <div class="col-md-2 col-6">
                        <div class="price">$@item.Value.producto.Precio.ToString("###,###,###")</div>
                    </div>
                    <div class="col-md-2 col-6">
                        <div class="quantity-container d-flex align-items-center mt-15">
                            <input type="text" class="quantity-amount" value="@item.Value.cantidad" />
                        </div>
                    </div>
                    <div class="col-md-2 col-12">
                        @{
                            totalProducto = item.Value.producto.Precio * item.Value.cantidad;
                            totalVenta += totalProducto;
                            <div class="total">$@totalProducto.ToString("###,###,###")</div>
                        }
                    </div>
                </div>
            }
        }
    </div>
    <div class="subtotal-area d-flex align-items-center justify-content-end">
        <div class="title text-uppercase">Total a Pagar</div>
        <div class="subtotal">$@totalVenta.ToString("###,###,###")</div>
    </div>
    <div class="d-flex align-items-center justify-content-center">
        <h3>Seleccione el método de pago:</h3>
    </div>
    <div class="cupon-area d-flex align-items-center justify-content-between flex-wrap">
        <a href="/WebPay/EfectuarPago" class="view-btn"><img src="~/Content/img-electronica/webpay/webpay.png" /></a>
        <a href="/Paypal/PaymentWithPaypal" class="view-btn"><img src="~/Content/img-electronica/paypal/pp_cc_mark_74x46.jpg" /></a>
    </div>
</div>
<!-- End Cart Area -->

