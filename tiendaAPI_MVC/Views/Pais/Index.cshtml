@Scripts.Render("~/Scripts/Admin/vendors/datatables.net-scroller/js/dataTables.scroller.min.js")
@Scripts.Render("~/Scripts/Admin/vendors/jszip/dist/jszip.min.js")
@Scripts.Render("~/Scripts/Admin/vendors/pdfmake/build/pdfmake.min.js")
@Scripts.Render("~/Scripts/Admin/vendors/pdfmake/build/vfs_fonts.js")
@Scripts.Render("~/Scripts/js/mantenedores/shared.js")
