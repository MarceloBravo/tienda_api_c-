@Scripts.Render("~/Scripts/Admin/vendors/datatables.net-buttons/js/buttons.print.min.js")
@Scripts.Render("~/Scripts/Admin/vendors/datatables.net-fixedheader/js/dataTables.fixedHeader.min.js")
@Scripts.Render("~/Scripts/Admin/vendors/datatables.net-keytable/js/dataTables.keyTable.min.js")
@Scripts.Render("~/Scripts/Admin/vendors/datatables.net-responsive/js/dataTables.responsive.min.js")
